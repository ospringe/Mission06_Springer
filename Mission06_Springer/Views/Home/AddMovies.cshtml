@model Movie

@{
    ViewData["Title"] = "Add Movie";
}

<h2>Add a Movie to the Collection</h2>

<form method="post">

    <input type="hidden" asp-for="MovieId" />
    <br/>
    
    <!-- Title -->
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Category -->
    <div class="mb-3">
        <select asp-for="CategoryId" class="form-select">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>

    <!-- Year -->
    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <!-- Director -->
    <div class="mb-3">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    <!-- Rating Dropdown -->
    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <select asp-for="Rating" class="form-select">
            <option value="">Select a Rating</option>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <!-- Edited (Yes / No) -->
    <div class="mb-3">
        <label class="form-label">Edited</label>
        <select asp-for="Edited" class="form-select">
            <option value="">Select an option</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <!-- Lent To (Optional) -->
    <div class="mb-3">
        <label asp-for="LentTo" class="form-label"></label>
        <input asp-for="LentTo" class="form-control" />
        <span asp-validation-for="LentTo" class="text-danger"></span>
    </div>
    
    <!-- Copied to Plex (Yes / No) -->
    <div class="mb-3">
        <label class="form-label">Copied to Plex</label>
        <select asp-for="CopiedToPlex" class="form-select">
            <option value="">Select an option</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    </div>

    <!-- Notes (Optional, 25 char limit enforced in model) -->
    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <input asp-for="Notes" class="form-control" maxlength="25"/>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Submit Movie</button>
    
    <div asp-validation-summary="All"></div>

</form>

<a asp-controller="Home" asp-action="MovieCollection" class="btn btn-outline-primary">View Collection</a>

