@{
    ViewData["Title"] = "Get to Know Joel";
}

<div class="container py-5">

    <div class="text-center mb-5">
        <h1 class="display-5 fw-semibold mb-2">Get to Know Joel!</h1>
    </div>

    <div class="row g-4 justify-content-center">

        <!-- Comedy Card -->
        <div class="col-12 col-md-5">
            <div class="card h-100 border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h3 class="h5 fw-semibold mb-2">Come see Joel perform</h3>
                    <p class="text-muted mb-3">Catch Joel at Quick Wits Comedy.</p>

                    <a class="btn btn-outline-primary rounded-pill px-4"
                       href="https://www.qwcomedy.com/"
                       target="_blank">
                        Visit Quick Wits
                    </a>
                </div>
            </div>
        </div>

        <!-- Podcast Card -->
        <div class="col-12 col-md-7">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="row g-0 align-items-stretch">
                    <div class="col-md-6">
                        <a href="https://baconsale.com/" target="_blank">
                            <img src="~/img/BaconsaleKate.jpg"
                                 alt="Baconsale"
                                 class="img-fluid h-100 w-100"
                                 style="object-fit: cover;" />
                        </a>
                    </div>

                    <div class="col-md-6">
                        <div class="card-body p-4">
                            <h3 class="h5 fw-semibold mb-2">Listen to the podcast</h3>
                            <p class="text-muted mb-3">
                                Baconsale — new episodes weekly!
                            </p>

                            <a class="btn btn-primary rounded-pill px-4"
                               href="https://baconsale.com/"
                               target="_blank">
                                Go to Baconsale
                            </a>

                            <div class="mt-3 small text-muted">
                                Tip: Open links in a new tab so users don’t “lose” your site.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
