@model Movie

@{
    ViewData["Title"] = "Add Movie";
}

<div class="container py-5 d-flex justify-content-center">

    <div class="card shadow-sm border-0 rounded-4 p-4" style="max-width: 700px; width: 100%;">

        <h2 class="mb-4 text-center">
            Add a Movie to the Collection
        </h2>

        <form method="post">

            <input type="hidden" asp-for="MovieId" />

            <!-- Title -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-semibold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Category</label>
                <select asp-for="CategoryId" class="form-select">
                    <option value="">Select a Category</option>
                    @foreach (Category c in ViewBag.Categories)
                    {
                        <option value="@c.CategoryId">@c.CategoryName</option>
                    }
                </select>
            </div>

            <!-- Year -->
            <div class="mb-3">
                <label asp-for="Year" class="form-label fw-semibold"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <!-- Director -->
            <div class="mb-3">
                <label asp-for="Director" class="form-label fw-semibold"></label>
                <input asp-for="Director" class="form-control" />
            </div>

            <!-- Rating -->
            <div class="mb-3">
                <label asp-for="Rating" class="form-label fw-semibold"></label>
                <select asp-for="Rating" class="form-select">
                    <option value="">Select a Rating</option>
                    <option>G</option>
                    <option>PG</option>
                    <option>PG-13</option>
                    <option>R</option>
                </select>
            </div>

            <!-- Edited -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Edited</label>
                <select asp-for="Edited" class="form-select">
                    <option value="">Select an option</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="Edited" class="text-danger"></span>
            </div>

            <!-- Lent To -->
            <div class="mb-3">
                <label asp-for="LentTo" class="form-label fw-semibold"></label>
                <input asp-for="LentTo" class="form-control" />
            </div>

            <!-- Copied to Plex -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Copied to Plex</label>
                <select asp-for="CopiedToPlex" class="form-select">
                    <option value="">Select an option</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
            </div>

            <!-- Notes -->
            <div class="mb-4">
                <label asp-for="Notes" class="form-label fw-semibold"></label>
                <input asp-for="Notes" class="form-control" maxlength="25"/>
            </div>

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="d-flex justify-content-between">
                <!-- Cancel Button -->
                <a asp-controller="Home"
                   asp-action="MovieCollection"
                   class="btn btn-outline-secondary rounded-pill px-4">
                    Cancel
                </a>

                <!-- Submit Button -->
                <button type="submit"
                        class="btn btn-primary rounded-pill px-4">
                    Submit Movie
                </button>
            </div>

        </form>

    </div>

</div>
